<?xml version='1.0' encoding='UTF-8'?>
<!-- {{ ansible_managed }} -->
<!DOCTYPE properties SYSTEM 'http://java.sun.com/dtd/properties.dtd'>

<properties>
    <entry key='config.default'>./conf/default.xml</entry>
    <!--
    This is the main configuration file. All your configuration parameters should be placed in this file.
    For list of available parameters see following page: https://www.traccar.org/configuration-file/
    -->
    <entry key='database.driver'>org.postgresql.Driver</entry>
    <entry key='database.url'>jdbc:postgresql://db:5432/traccar</entry>
    <entry key='database.user'>{{ traccar_database_username }}</entry>
    <entry key='database.password'>{{ traccar_database_password }}</entry>
    <entry key='mail.smtp.host'>{{ traccar_smtp_host }}</entry>
    <entry key='mail.smtp.port'>{{ traccar_smtp_port }}</entry>
    <entry key='mail.smtp.starttls.enable'>true</entry>
    <entry key='mail.smtp.starttls.required'>true</entry>
    <entry key='mail.smtp.from'>{{ traccar_smtp_from }}</entry>
    <entry key='mail.smtp.auth'>true</entry>
    <entry key='mail.smtp.username'>{{ traccar_smtp_username }]</entry>
    <entry key='mail.smtp.password'>{{ traccar_smtp_password }}</entry>
    <entry key='sms.enable'></entry>
</properties>
